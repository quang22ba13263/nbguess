{
  "install": "pip3 install --user -r requirements.txt",
  "start": "npm start",
  "watch": {
    "install": {
      "include": [
        "^package\\.json$",
        "^\\.env$",
        "^requirements\\.txt$"
      ]
    },
    "restart": {
      "include": [
        "^server\\.js$",
        "^server\\.py$"
      ]
    },
    "throttle": 1000
  },
  "env": {
    "PYTHONPATH": "${HOME}/python_modules"
  }
} 