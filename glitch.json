{
  "install": "pip3 install --user -r requirements.txt",
  "start": "bash start.sh",
  "watch": {
    "ignore": [
      "\\.pyc$"
    ],
    "restart": {
      "include": [
        "\\.py$",
        "^start\\.sh$",
        "^requirements\\.txt$"
      ]
    }
  },
  "env": {
    "PYTHONPATH": "${HOME}/python_modules"
  }
} 