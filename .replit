language = "python3"
run = "bash start.sh"
entrypoint = "server.py"
hidden = [".git", ".config"]

[nix]
channel = "stable-22_11"

[env]
PYTHONPATH = "${PYTHONPATH}:${HOME}/.local/lib/python3.10/site-packages"

[packager]
language = "python3"

[packager.features]
packageSearch = true
guessImports = true

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp" 